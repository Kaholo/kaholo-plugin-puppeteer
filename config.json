{
  "name": "puppeteer",
  "viewName": "Puppeteer",
  "version": "0.1.0",
  "type": "executer",
  "execProgram": "node",
  "imgUrl": "logo.png",
  "main": "app.js",
  "description": "Kaholo Plugin for Puppeteer",
  "settings": [
    {
      "name": "workingDirectory",
      "viewName": "Working Directory",
      "type": "string",
      "description": "Path to a directory on the Kaholo agent which contains the Puppeteer Test JavaScript file"
    },
    {
      "name": "puppeteerJSFile",
      "viewName": "Puppeteer JavaScript File",
      "type": "string",
      "description": "JavaScript File that run a puppeteer test"
    }
  ],
  "methods": [
    {
      "name": "runCommand",
      "viewName": "Run Node Command",
      "params": [
        {
          "name": "command",
          "viewName": "Command",
          "type": "string",
          "description": "Puppeteer command.",
          "placeholder": "node puppeteer-script.js",
          "required": true
        }
      ]
    },
    {
      "name": "runPuppeteerTestEnvVars",
      "viewName": "Run Puppeteer Test (Env Vars)",
      "params": [
        {
          "name": "workingDirectory",
          "viewName": "Working Directory",
          "description": "Path to a directory on the Kaholo agent which contains the Puppeteer Test JavaScript file",
          "placeholder": "testrepo/suite-a/uitests",
          "type": "string",
          "default": "timbuktu/puppeteer/kaholo-login"
        },
        {
          "name": "puppeteerJSFile",
          "viewName": "Puppeteer JavaScript File",
          "description": "JavaScript File that run a puppeteer test",
          "placeholder": "test-one.js",
          "type": "string",
          "default": "kaholo-login.js"
        },
        {
          "name": "environmentVars",
          "viewName": "Environment Variables",
          "description": "One key=value pair per line to be set as environment variables",
          "placeholder": "USER=sally\nDEBUG_LEVEL=3",
          "type": "text",
          "parserType": "keyValuePairs"
        }
      ]
    },
    {
      "name": "runPuppeteerTestParams",
      "viewName": "Run Puppeteer Test (Params)",
      "params": [
        {
          "name": "workingDirectory",
          "viewName": "Working Directory",
          "description": "Path to a directory on the Kaholo agent which contains the Puppeteer Test JavaScript file",
          "placeholder": "testrepo/suite-a/uitests",
          "type": "string",
          "default": "timbuktu/puppeteer/kaholo-login"
        },
        {
          "name": "puppeteerJSFile",
          "viewName": "Puppeteer JavaScript File",
          "description": "JavaScript File that run a puppeteer test",
          "placeholder": "test-one.js",
          "type": "string",
          "default": "kaholo-login.js"
        },
        {
          "name": "kaholoURL",
          "viewName": "Kaholo URL",
          "description": "The base URL of your Kaholo Environment",
          "placeholder": "http://172.24.0.6:3000",
          "type": "string"
        },
        {
          "name": "kaholoUsername",
          "viewName": "Username",
          "description": "The User Accessing the Kaholo Environment",
          "placeholder": "tester@kaholo.io",
          "type": "string"
        },
        {
          "name": "kaholoPassword",
          "viewName": "Password",
          "description": "The password of the user",
          "type": "vault"
        }
      ]
    }
  ]
}